        <addForeignKeyConstraint baseColumnNames="ride_id"
                                 baseTableName="ride_offer"
                                 constraintName="fk_ride_offer_ride_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ride"/>

    </changeSet>
</databaseChangeLog>
